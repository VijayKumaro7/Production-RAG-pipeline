# ============================================================
# Environment Variables — Copy to .env and fill in your keys
# ============================================================

# OpenAI (required if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini (required if using google provider)
GOOGLE_API_KEY=your_google_api_key_here

# Ollama (no key required — runs locally)
OLLAMA_BASE_URL=http://localhost:11434

# HuggingFace (optional — for private models)
HUGGINGFACE_API_KEY=your_hf_token_here

# MLflow (optional — for remote tracking server)
MLFLOW_TRACKING_URI=./mlruns
